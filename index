<script>
  // Animation on scroll
  document.addEventListener("DOMContentLoaded", function () {
    const elements = document.querySelectorAll(".animate-on-scroll");
    const observer = new IntersectionObserver(
      (entries, obs) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("in-view");
            obs.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.2 }
    );
 
    elements.forEach((el) => observer.observe(el));
  });
 
  // Rechner
  function calculatePension() {
    const birthInput = document.getElementById("birthdate").value;
    const bruttoInput = parseFloat(
      document.getElementById("brutto").value.replace(",", ".")
    );
    const childrenInput = parseInt(document.getElementById("children").value, 10);
 
    const resTodayEl = document.getElementById("res-today");
    const resBoostedEl = document.getElementById("res-boosted");
    const resDiffEl = document.getElementById("res-diff");
    const resLifetimeEl = document.getElementById("res-lifetime");
 
    if (!birthInput || isNaN(bruttoInput) || isNaN(childrenInput)) {
      resTodayEl.textContent = "Bitte alle Felder ausfüllen.";
      resBoostedEl.textContent = "–";
      resDiffEl.textContent = "–";
      resLifetimeEl.textContent = "–";
      return;
    }
 
    const birthDate = new Date(birthInput);
    const now = new Date();
    let age = now.getFullYear() - birthDate.getFullYear();
    const m = now.getMonth() - birthDate.getMonth();
    if (m < 0 || (m === 0 && now.getDate() < birthDate.getDate())) {
      age--;
    }
    if (age < 18) age = 18;
    if (age > 67) age = 67;
 
    const rentToday = bruttoInput * 0.4;
 
    const kezPlus = childrenInput * 120;
    const riesterBase = 175 / 12;
    const riesterKids = childrenInput * (300 / 12);
 
    const monthlyPlus = kezPlus + riesterBase + riesterKids;
 
    const rentBoosted = rentToday + monthlyPlus;
    const diff = monthlyPlus;
 
    const yearsLeft = Math.max(0, 100 - age);
    const lifetimeExtra = diff * 12 * yearsLeft;
 
    const fmt = (val) =>
      new Intl.NumberFormat("de-DE", {
        minimumFractionDigits: 0,
        maximumFractionDigits: 0,
      }).format(Math.round(val));
 
    resTodayEl.textContent = fmt(rentToday) + " €";
    resBoostedEl.textContent = fmt(rentBoosted) + " €";
    resDiffEl.textContent = fmt(diff) + " €";
    resLifetimeEl.textContent = fmt(lifetimeExtra) + " €";
  }
</script>
</body>
